<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll__row_conversation__file__message_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/collections__content_horizontal_padding"
    android:paddingRight="@dimen/collections__content_horizontal_padding"
    android:paddingTop="@dimen/wire__padding__8"
    android:paddingBottom="@dimen/wire__padding__8"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.waz.zclient.ui.text.TypefaceTextView
            android:id="@+id/ttv__collection_item__user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            android:textSize="@dimen/wire__text_size__small"
            app:font="@string/wire__typeface__light"
            />
        <com.waz.zclient.ui.text.TypefaceTextView
            android:id="@+id/ttv__collection_item__time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/wire__text_color_secondary_light_selector"
            android:textSize="@dimen/wire__text_size__small"
            app:font="@string/wire__typeface__light"
            />
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cv__collections__content_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wire__padding__4"
        app:cardCornerRadius="@dimen/content__card__corner_radius"
        app:cardBackgroundColor="@color/light_graphite_8"
        app:cardElevation="0dp">

    </android.support.v7.widget.CardView>

</LinearLayout>
