<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:background="?wireDividerColorSolid"
    >

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/ttv__collection_header__name"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:paddingStart="@dimen/wire__padding__12"
        android:gravity="center_vertical"
        android:textSize="@dimen/wire__text_size__small"
        app:font="@string/wire__typeface__bold"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="1"/>

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/ttv__collection_header__count"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/wire__text_size__small"
        app:font="@string/wire__typeface__thin"
        android:visibility="visible"/>

    <com.waz.zclient.ui.text.GlyphTextView
        android:id="@+id/gtv__arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/wire__padding__12"
        android:paddingStart="@dimen/wire__padding__12"
        android:gravity="center_vertical"
        android:text="@string/glyph__next"
        android:textSize="@dimen/wire__text_size__small"
        android:visibility="visible"
        />

</LinearLayout>
